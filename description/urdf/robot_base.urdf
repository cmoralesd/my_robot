<?xml version="1.0"?>
<robot>
    <!-- LINK BASE-->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0.125" rpy="0 0 0" />
            <geometry>
                <box size="0.4 0.25 0.15" />
            </geometry>
            <material name="dark red">
                <color rgba="0.85 0.0 0.0 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.125" rpy="0 0 0" />
            <geometry>
                <box size="0.4 0.25 0.15" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.125" rpy="0 0 0" />
            <inertia iyy="0.016755" ixz="0.0" izz="0.016755" iyz="0.0" ixx="0.016755" ixy="0.0" />
            <mass value="4.2" />
        </inertial>
    </link>


    <!-- RUEDA IZQUIERDA  -->
    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="-0.1 0.15 0.05" rpy="-1.570796 0 0" />
        <axis xyz="0 0 1" />
        <parent link="base_link" />
        <child link="left_wheel" />
    </joint>
    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.05" />
            </geometry>
            <material name="gray">
                <color rgba="0.5 0.5 0.5 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.05" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia iyy="0.002788" ixz="0.0" izz="0.005147" iyz="0.0" ixx="0.002788" ixy="0.0" />
            <mass value="0.8" />
        </inertial>
    </link>

    <!-- RUEDA DERECHA  -->
    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="-0.1 -0.15 0.05" rpy="-1.570796 0 0" />
        <axis xyz="0 0 1" />
        <parent link="base_link" />
        <child link="right_wheel" />
    </joint>
    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.05" />
            </geometry>
            <material name="gray">
                <color rgba="0.5 0.5 0.5 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder length="0.04" radius="0.05" />
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia iyy="0.002788" ixz="0.0" izz="0.005147" iyz="0.0" ixx="0.002788" ixy="0.0" />
            <mass value="0.8" />
        </inertial>
    </link>

    <!-- RUEDA DE SOPORTE  -->
    <joint name="connection_link" type="fixed">
        <origin xyz="0.15 0 0.05" rpy="0 0 0" />
        <axis xyz="0 0 1" />
        <parent link="base_link" />
        <child link="caster_wheel" />
    </joint>
    <link name="caster_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.05" />
            </geometry>
        </collision>
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <inertia iyy="0.001047" ixz="0.0" izz="0.001047" iyz="0.0" ixx="0.001047" ixy="0.0" />
            <mass value="0.5" />
        </inertial>
    </link>

    
</robot>